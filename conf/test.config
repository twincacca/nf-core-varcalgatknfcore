/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/varcalgatknfcore -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'

    // Input data
    //input  = params.pipelines_testdata_base_path + 'rnaseq/samplesheet/samplesheet_minimal.csv'
    input  = params.pipelines_testdata_base_path + 'raredisease/testdata/samplesheet_single.csv'

    // Genome references
    // fasta = params.pipelines_testdata_base_path + 'rnaseq/reference/chr22_23800000-23980000.fa'  // genome.fa
    fasta   = params.pipelines_testdata_base_path + 'raredisease/reference/Homo_sapiens_assembly38_chr20_chrM.fasta'
    vcf     = params.pipelines_testdata_base_path + 'raredisease/reference/grch38_gnomad_reformated_-r3.1.1-.vcf.gz'
    vcf_tbi = params.pipelines_testdata_base_path + 'raredisease/reference/grch38_gnomad_reformated_-r3.1.1-.vcf.gz.tbi'
    known_dbsnp = params.pipelines_testdata_base_path + 'raredisease/reference/dbsnp_-138-.vcf.gz'


}
